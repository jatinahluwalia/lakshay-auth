{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "allowJs": true,
    "strict": true,
    "rootDirs": ["src"],
    "outDir": "api",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
